@model Assignment.MVC.Models.ViewModels.SignInViewModel


@{
    ViewData["Title"] = "Login";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}



<div class="row justify-content-center align-items-center mt-5">
    <div class="col-md-6">
        <h1 class="navigation-colors">Login</h1>
        <form asp-action="SignIn" class="mt-4" asp-route-returnUrl=@returnUrl>
            <div class="mb-3 navigation-colors">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control bg-dark text-light" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 navigation-colors">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control bg-dark text-light" />
                <span asp-validation-for="Password" type="password" class="text-danger"></span>
            </div>
            <div class="my-3">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <button type="submit" value="Login" class="btn btn-dark border">Login</button>
        </form>

        <div class="mt-3 navigation-colors">
            No account yet? <a class="text-light"asp-action="SignUp">Register</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}