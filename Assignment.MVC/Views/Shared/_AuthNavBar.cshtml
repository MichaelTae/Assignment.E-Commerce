@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav flex-grow-1 px-3">           
        <li class="nav-item px-1">
            <a class="nav-link  btn btn-dark border text-light" asp-area="" asp-controller="Order" asp-action="Index">All Orders</a>
        </li>
    </ul>
    <ul class="navbar-nav  justify-content-end">
        <li class="nav-item">
            <a class="nav-link btn btn-dark border text-light" asp-area="" asp-controller="Auth" asp-action="SignOut">Sign out</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav justify-content-end flex-grow-1">
        <li class="nav-item">
            <a class="nav-link navigation-colors  btn btn-dark" asp-area="" asp-controller="Auth" asp-action="SignUp">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link navigation-colors  btn btn-dark" asp-area="" asp-controller="Auth" asp-action="SignIn">Login</a>
        </li>
    </ul>
}
